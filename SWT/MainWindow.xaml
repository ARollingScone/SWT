<Window x:Class="SWT.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SWT PLACEHOLDER MENU" Height="400" Width="525">
    <Grid>
        <StackPanel >
            <TextBlock Text="Name:"
                       Margin="10"/>
            <TextBox Margin="10 0 10 10"/>
            <Separator/>
            <Button Content="Host Game"
                    Margin="10"
                    Click="Button_Click"/>
            <TextBlock Text="Port"
                       Margin="10"/>
            <TextBox Margin="10 0 10 10"
                     Text="8000"/>
            <Separator/>
            <Button Content="Join Game"
                    Margin="10"
                    Click="Button_Click_1"/>
            <TextBlock Text="IP Address:"
                       Margin="10"/>
            <TextBox Margin="10 0 10 0"
                     Text="127.0.0.1"/>
            <TextBlock Text="Port"
                       Margin="10"/>
            <TextBox Margin="10 0 10 0"
                     Text="8000"/>
        </StackPanel>
    </Grid>
</Window>
